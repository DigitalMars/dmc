BEGIN
	CONTROL         "", IDC_EDIT1, "hedit", ES_LEFT | ES_AUTOHSCROLL |
					WS_BORDER | WS_TABSTOP, 5, 8, 143, 26
	PUSHBUTTON      "Configure", IDC_CONFIGURE, 156, 6, 45, 14
	DEFPUSHBUTTON   "Done", IDOK, 87, 52, 33, 14
END

