// 4 standard edit controls, with spin buttons
IDD_SPIN_EDIT DIALOG DISCARDABLE  16, 16, 176, 98
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Sample Dialog with spin controls"
FONT 8, "MS Sans Serif"
BEGIN
    LTEXT           "&One:",-1,8,9,34,8
    EDITTEXT        IDC_EDIT1,47,7,40,12,ES_AUTOHSCROLL
    CONTROL         "Spin4",IDC_BUTTON4,"msctls_updown32",UDS_SETBUDDYINT | 
                    UDS_AUTOBUDDY | UDS_ARROWKEYS,87,7,11,12
    LTEXT           "&Two:",-1,8,29,34,8
    EDITTEXT        IDC_EDIT2,47,27,40,12,ES_AUTOHSCROLL
    CONTROL         "Spin3",IDC_BUTTON3,"msctls_updown32",UDS_SETBUDDYINT | 
                    UDS_AUTOBUDDY | UDS_ARROWKEYS,87,27,11,12
    LTEXT           "T&hree:",-1,8,49,34,8
    EDITTEXT        IDC_EDIT3,47,47,40,12,ES_AUTOHSCROLL
    CONTROL         "Spin2",IDC_BUTTON2,"msctls_updown32",UDS_SETBUDDYINT | 
                    UDS_AUTOBUDDY | UDS_ARROWKEYS,87,47,11,12
    LTEXT           "&Four:",-1,8,67,34,8
    EDITTEXT        IDC_EDIT4,47,67,40,12,ES_AUTOHSCROLL
    CONTROL         "Spin1",IDC_BUTTON1,"msctls_updown32",UDS_SETBUDDYINT | 
                    UDS_AUTOBUDDY | UDS_ARROWKEYS,87,67,11,12
    DEFPUSHBUTTON   "Done",IDOK,140,6,30,14
END

